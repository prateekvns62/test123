<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.main">
            <block class="Ninedotmedia\ProductAttributes\Block\Product\Attributes"
                   name="category.product.attributes"
                   template="Magento_Catalog::product/view/attributes.phtml" before="product.info.price"/>
            <block class="Ninedotmedia\ProductAttributes\Block\Product\Additional"
                   name="additional.condition"
                   template="Ninedotmedia_ProductAttributes::product/additional/condition.phtml" before="category.product.attributes"/>

            <container name="holder.product.label" htmlClass="holder-products-label" htmlTag="div">
                <block class="Ninedotmedia\ProductAttributes\Block\Product\Label" name="product.label.save" before="category.product.attributes">
                    <arguments>
                        <argument name="type" xsi:type="string">saved_money</argument>
                        <argument translate="true" name="label" xsi:type="string">Save</argument>
                        <argument name="class" xsi:type="string">promo-saved-money</argument>
                    </arguments>
                </block>
                <block class="Ninedotmedia\ProductAttributes\Block\Product\Label" name="product.label.guarantee" before="category.product.attributes">
                    <arguments>
                        <argument name="type" xsi:type="string">guarantee</argument>
                        <argument name="class" xsi:type="string">promo-guarantee</argument>
                    </arguments>
                </block>
            </container>

            <container name="holder.additional.advantages" htmlClass="holder-additional-advantages" htmlTag="div">

                <container name="holder.product.links" htmlClass="holder-product-links" htmlTag="div">
                    <block class="Magento\Cms\Block\Block" name="product-links" before="-">
                        <arguments>
                            <argument name="block_id" xsi:type="string">product-links</argument>
                        </arguments>
                    </block>
                </container>

                <block class="Ninedotmedia\ProductAttributes\Block\Product\Additional" name="additional.advantages"
                       template="Ninedotmedia_ProductAttributes::product/additional/advantages.phtml" after="holder.product.links"/>
            </container>

        </referenceBlock>
        <move element="holder.additional.advantages" destination="product.info.main" after="category.product.attributes"/>
    </body>
</page>
